{
  "name": "gulp_less_start",
  "version": "1.0.0",
  "private": true,
  "description": "Начальная сборка на less",
  "devDependencies": {
    "autoprefixer": "8.3.x",
    "browser-sync": "2.23.x",
    "gulp": "3.9.x",
    "del": "^5.0.0",
    "gulp-csso": "^3.0.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-imagemin": "^6.0.0",
    "gulp-posthtml": "^3.0.4",
    "gulp-rename": "^1.4.0",
    "gulp-sourcemaps": "2.6.x",
    "gulp-svgstore": "^7.0.1",
    "gulp-uglify": "^3.0.2",
    "gulp-webp": "^4.0.1",
    "posthtml-include": "^1.2.0",
    "gulp-less": "3.5.0",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "7.0.x",
    "@htmlacademy/editorconfig-cli": "1.x",
    "stylelint": "9.2.x",
    "stylelint-config-htmlacademy": "0.1.x"
  },
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/less/**/*.less\" --syntax less",
    "test": "npm run editorconfig && npm run stylelint",
    "build": "gulp css",
    "start": "gulp serve"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
    "source/img/**/*.svg",
    "source/less/**/*.scss"
  ],
  "engines": {
    "node": "8.11"
  }
}
